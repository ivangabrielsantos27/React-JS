{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@project-ed/lib/constants": ["lib/constants/src/index.ts"],
      "@project-ed/lib/hooks": ["lib/hooks/src/index.ts"],
      "@project-ed/lib/http-service": ["lib/http-service/src/index.ts"],
      "@project-ed/lib/icons": ["lib/icons/src/index.ts"],
      "@project-ed/lib/shared-i18n": ["lib/shared-i18n/src/index.ts"],
      "@project-ed/lib/ui": ["lib/ui/src/index.ts"],
      "@project-ed/lib/utils": ["lib/utils/src/index.ts"]
    }
  }
}
